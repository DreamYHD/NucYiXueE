<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/lcim_chat_item_right_bg"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/txt_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/chat_item_file_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/lcim_chat_horizontal_margin"/>

    <TextView
        android:id="@+id/size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/lcim_chat_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/download"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/lcim_chat_horizontal_margin"
        android:src="@drawable/ic_cloud_download_right_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>